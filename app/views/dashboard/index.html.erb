<div class="col-md-6 col-xs-12">
  <div class="widget stacked">

    <div class="widget-header">
      <i class="icon-star"></i>
      <h3>Quick Stats</h3>
    </div> <!-- /widget-header -->
    
    <div class="widget-content min-height-200">
      
      <div class="stats">
        
        <div class="stat">
          <span class="stat-value">$<%= @spendings_today %></span>                  
          Spent Today
        </div> <!-- /stat -->
        
        <div class="stat">
          <span class="stat-value">$<%= @spendings_this_month %></span>
          Spent This Month
        </div> <!-- /stat -->
        
        <div class="stat">
          <span class="stat-value"><%= JobSite.count %></span>                 
          Present Job Sites
        </div> <!-- /stat -->
        
      </div> <!-- /stats -->
    </div> <!-- /widget-content -->
  </div> <!-- /widget -->
</div>

<div class="col-md-6">
      
  <div class="widget stacked">
    
    <div class="widget-header">
      <i class="icon-bar-chart"></i>
      <h3>Job Sites</h3>
    </div> <!-- /widget-header -->
    
    <div class="widget-content min-height-200">
      
      <div class="cirque-stats">
        <% @job_sites.each do |job_site| %>
          <div class="pull-left">
            <div class="ui-cirque" data-value="<%= job_site.purchased %>" data-total="<%= job_site.total_budget %>" data-arc-color="#FF9900" data-label="ratio">
            </div>
            <h5 class="text-center"><%= job_site.name %></h5>
          </div>
        <% end %>
      </div> <!-- /.cirque-stats -->
    </div> <!-- /widget-content -->
  </div> <!-- /widget --> 
</div> <!-- /.span6 -->