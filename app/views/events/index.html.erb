<div class="widget stacked">
  <div class="widget-header">
    <i class="icon-event"></i>
    <h3>Events</h3>
  </div> <!-- /widget-header -->
        
  <div class="widget-content">
  	<div class="row-fluid">
	  	<form method="get" action="/events"> 
	  		<div class="col-md-8 col-sm-12 pull-right text-right margin-right-20">
		      From <%= text_field_tag :from, cookies[:from], class: "date-picker" %>
		      
		      To <%= text_field_tag :to, cookies[:to], class: "date-picker" %>
					<button class="btn btn-default" id="add_phase_btn">Search</button>
	    	</div>
			</form>
	  </div>
    <div class="table-responsive">
	    <table class="table table-striped table-bordered">
	      <thead>
	        <tr>
	          <th>#</th>
	          <th>Created</th>
	          <th>Summary</th>
	          <th>Evented by</th>
	        </tr>
	      </thead>
	      <tbody>
	      <% @events.each do |event| %>
	        <tr>
	          <td><%= event.id %></td>
	          <td><%= event.created_at.strftime("%A, %B %e %I:%M %p") %></td>
	          <td><%= event.summary %></td>
	          <td><%= event.user.name unless event.user.nil? %></td>
	        </tr>
	      <% end %>
	      </tbody>
	    </table>
      <%= will_paginate @events, previous_label: "&laquo;", next_label: "&raquo;" %>
	  </div>
  </div>
</div>