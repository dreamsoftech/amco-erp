  <%= simple_form_for @supplier, url: supplier_path(@supplier), :html => {:method => :put, :class => 'edit-location form-horizontal' } do |f| %>
<div class="widget stacked">
  <div class="widget-header">
    <i class="icon-product"></i>
    <h3>Suppliers > Edit Supplier</h3>
  </div> <!-- /widget-header -->

  <div class="widget-content">
    <div class="row-fluid">
      <div class="col-md-6">
        <%= render partial: "form", locals: {f: f, action: "edit"} %>

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <%= f.submit "Update", :class => "btn btn-primary" %>
            <a onclick= "history.back();" class="btn btn-default">Back</a>
          </div>
        </div>

      </div>
      <div class="col-sm-6">
        <div id="products_div" class="panel panel-default">
          <div class="panel-heading">
            Products
          </div>
          <div class="panel-body min-height-200">
            <div class="table-responsive">
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>#</th>
                    <th class="col-sm-2">Photo</th>
                    <th>Name</th>
                    <th>Price</th>
                  </tr>
                </thead>
                <tbody>
                  <% @products.each do |p| %>
                  <tr>
                    <td>
                      <% if @supplier_product_ids.include? (p.id) %>
                        <%= check_box_tag "products[#{p.id}]", 1, {checked: "checked"} %>
                      <% else %>
                        <%= check_box_tag "products[#{p.id}]", 1 %>
                      <% end %>
                    </td>
                    <td><%= image_tag p.photo.url(:medium), style: "width: 50px; height: auto" %></td>
                    <td><%= p.name %></td>
                    <td><%= p.price %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>