<div class="form-group">
  <%= f.label :name, class: "col-sm-4" %>
  <div class="col-sm-8">
    <%= f.input_field :name, class: "form-control" %>
  </div>
</div>
<!-- New location input tag -->
<% if action == "edit" %>
  <div id="template" class="form-group">
    <%= f.label :location, class: "col-sm-4" %>
    <div class="input-group col-sm-8">
      <%= text_field_tag :supplier_locations, "", placeholder: "Input new location name", name: "locations[]", class: "form-control" %>
      <span class="input-group-btn">
        <a class="btn btn-default btn-sm add-location"><i class="icon-plus"></i></a>
      </span>
    </div>
  </div>
<% end %>
<!-- Edit Location tags -->
<div id="locations">
  <%= f.fields_for :locations do |location| %>
    <div class="form-group">
      <label class="col-sm-4 text-right">Location</label>
      <div class="col-sm-8 input-group">
        <%= location.input_field :name, class: "form-control" %>
        <% if action == "edit" %>
          <span class="input-group-btn">
            <%= link_to("<i class='icon-minus'></i>".html_safe, location_path(location.object), :data => { :confirm => "Are you sure?" }, remote: true, :method => :delete, :class => 'btn btn-default btn-sm') %>
          </span>
        <% end %>
      </div><!-- /input-group -->
    </div>
  <% end %>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-sm-4" %>
  <div class="col-sm-8">
    <%= f.input_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :phone, class: "col-sm-4" %>
  <div class="col-sm-8">
    <%= f.input_field :phone, class: "form-control input-phone" %>
  </div>
</div>  

<div class="form-group">
  <%= f.label :fax, class: "col-sm-4" %>
  <div class="col-sm-8">
    <%= f.input_field :fax, class: "form-control input-phone" %>
  </div>
</div>